{
  "workbench.colorCustomizations": {
    "activityBar.background": "#23830b",
    "titleBar.activeBackground": "#23830b",
    "titleBar.activeForeground": "#FFF9FE"
  },
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".*csv": true
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
  },
  "[javascript]": {
    "editor.rulers": [
      150
    ],
  },
  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
          "name": "server",
          "commands": []
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "data",
          "commands": [
            "cd data"
          ]
        }
      ]
    }
  ],
}
